{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Docker Compose Up",
      "type": "shell",
      "command": "docker-compose",
      "args": ["up"],
      "options": {
        "cwd": "${workspaceFolder}/.."
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      }
    },
    {
      "label": "Docker Compose Down",
      "type": "shell",
      "command": "docker-compose",
      "args": ["down"],
      "options": {
        "cwd": "${workspaceFolder}/.."
      },
      "group": "build"
    },
    {
      "label": "Restart Frontend Service",
      "type": "shell",
      "command": "docker-compose",
      "args": ["restart", "frontend"],
      "options": {
        "cwd": "${workspaceFolder}/.."
      },
      "group": "build"
    },
    {
      "label": "Restart Backend Service",
      "type": "shell",
      "command": "docker-compose",
      "args": ["restart", "backend"],
      "options": {
        "cwd": "${workspaceFolder}/.."
      },
      "group": "build"
    }
  ]
}